<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/grey_500"
    android:orientation="vertical">

    //Title:SocialX
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/red_900">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SocialX"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    //Button
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_height="match_parent"
                android:text="LOGIN"
                android:textStyle="bold"
                android:background="@drawable/btn_bottom_left"
                android:backgroundTint="@color/red_900"/>

            <Button
                android:id="@+id/signup"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="SIGN UP"
                android:background="@drawable/btn_bottom_right"
                android:textColor="@color/grey_50"
                android:backgroundTint="@color/white"/>

    </LinearLayout>

    //Login Details
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_900"
            android:text="Sign In to your account"
            android:layout_marginTop="10dp"
            android:textSize="30dp" />

        //Email
        <TextView
            style="@style/txtView"
            android:text="Email"/>

        <EditText
            android:id="@+id/logEmail"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        //Password
        <TextView
            style="@style/txtView"
            android:text="Password"/>

        <EditText
            android:id="@+id/logPass"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        //Forgot
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_900"
            android:text="Forgot Password?"
            android:textSize="15dp"
            android:gravity="right"/>

        //Loginwith
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Login with"
            android:padding="5dp"
            android:textSize="15dp"
            android:gravity="center"/>

        //Icon
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google"
                android:src="@drawable/google"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>



        </LinearLayout>

        //Link for signup
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Don't have an account?"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tvsignup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Register Now"
                android:textSize="15dp"
                android:textColor="@color/red_900"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>

    //Login Button
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">

        <Button
            android:id="@+id/mainLogin"
            android:background="@drawable/btn_top_both"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOGIN"
            android:backgroundTint="@color/red_900"/>

    </LinearLayout>

</LinearLayout>