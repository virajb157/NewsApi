<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activity_signUp"
    android:background="@color/grey_500"
    android:orientation="vertical">

    //Title:SocialX
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/red_900">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SocialX"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    //Button
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="LOGIN"
            android:textColor="@color/grey_50"
            android:background="@drawable/btn_bottom_left"
            android:backgroundTint="@color/red_900"/>



        <Button

            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:background="@drawable/btn_bottom_right"
            android:textColor="@color/white"/>

    </LinearLayout>

    //Login Details
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_900"
            android:text="Create an account"
            android:textSize="30dp" />

        //Name
        <TextView
            style="@style/txtView"
            android:text="Name"/>

        <EditText
            android:id="@+id/etName"
            android:drawableRight="@drawable/ic_baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        //Email
        <TextView
            style="@style/txtView"
            android:text="Email"/>

        <EditText
            android:id="@+id/etEmail"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        //contact
        <TextView
            style="@style/txtView"
            android:text="Contact no"/>

        //Contact Number
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="IN +91 "/>

            <EditText
                android:id="@+id/etContact"
                android:drawableRight="@drawable/ic_baseline_call_24"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        //Password
        <TextView
            style="@style/txtView"
            android:text="Password"/>

        <EditText
            android:id="@+id/etPass"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        //terms and condition
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/cbTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="I agree with term &amp; condition"/>

        </LinearLayout>


        //Link for signup
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Don't have an account?"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Register Now"
                android:textSize="15dp"
                android:textColor="@color/red_900"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>

    //Register Button
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">

        <Button
            android:id="@+id/btnRegister"
            android:background="@drawable/btn_top_both"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REGISTER"
            android:backgroundTint="@color/red_900"/>

    </LinearLayout>

</LinearLayout>